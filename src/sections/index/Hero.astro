---
import Image from "astro/components/Image.astro";
---

<section
  class="relative w-screen h-screen mx-auto bg-gradient-to-b from-neutral-900 to-neutral-900 flex items-center justify-center animate-blurred-fade-in"
>
  <Image
    src="/bg.avif"
    alt="bg"
    width="100"
    height="100"
    class="absolute inset-0 w-full h-full object-cover opacity-20 img-gradient"
    loading="eager"
  />
  <div class="relative z-10 text-center">
    <Image
      src="/logo.avif"
      alt="logo"
      width="384"
      height="384"
      class="mx-auto w-[100rem] xl:w-50 max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg animate-fade-in animate-delay-500"
      loading="eager"
    />
  </div>
</section>
