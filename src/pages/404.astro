---
import '../styles/global.css';
import Link from '../components/general/Link';
import Image from 'astro/components/Image.astro';
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ruta no encontrada</title>
</head>
<body class="bg-neutral-950 bg-cover bg-center bg-black/80 bg-blend-overlay animate-blurred-fade-in">
    <Image 
        src="/bg.avif" 
        alt="Fondo" 
        loading="lazy" 
        width="100"
        height="100"
        class="absolute inset-0 opacity-20 object-cover w-full h-full -z-10" />
    <main>
        <div class="flex flex-col items-center justify-center h-screen">
            <h1 class="text-4xl font-bold text-white">404 - Página no encontrada</h1>
            <p class="mt-4 text-lg text-gray-300">Lo sentimos, la página que buscas no existe.</p>
            <Link
                href="/"
                label="Volver a la página principal" 
                className="mt-6 text-white" 
                client:idle
            />
        </div>
    </main>
</body>
</html>

