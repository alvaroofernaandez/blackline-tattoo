---
import Image from "astro/components/Image.astro";
import DesignComponent from "../components/diseños/DesignComponent";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Maez Ink - Diseños">
  <Image
    src="/logo.avif"
    alt="logo"
    width="128"
    height="128"
    class="mt-28 mx-auto w-32 max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg animate-blurred-fade-in"
    loading="lazy"
  />
  <div>
    <h1 class="text-center text-2xl md:text-3xl lg:text-4xl font-bold mt-10">
      Diseños
    </h1>
    <p class="text-center text-sm md:text-base lg:text-lg mt-5">
      Aquí puedes ver algunos de nuestros diseños más populares.
    </p>

    <div class="flex flex-col justify-center items-center mt-10">
      <DesignComponent client:visible server:defer/>
    </div>
  </div>
</Layout>
